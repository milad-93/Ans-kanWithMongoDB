@model IEnumerable<Ansökan.Models.Apartment>

@{
    ViewBag.Title = "Index";
}

<h2>List of available apartments</h2>

<p>
  @Html.ActionLink("Add new", "Create")
</p>
<table class="table">
    <tr>
        <th>
